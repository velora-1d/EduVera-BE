# Application Configuration
APP_MODE=release
SERVER_PORT=8000

# SECURITY: Generate a strong random key (min 32 chars)
# Example: openssl rand -hex 32
INTERNAL_KEY=REPLACE_WITH_SECURE_KEY

# Driver Configuration
OUTBOUND_DATABASE_DRIVER=postgres
OUTBOUND_MESSAGE_DRIVER=rabbitmq
OUTBOUND_CACHE_DRIVER=redis
OUTBOUND_WORKFLOW_DRIVER=
INBOUND_HTTP_DRIVER=fiber
INBOUND_MESSAGE_DRIVER=rabbitmq
INBOUND_WORKFLOW_DRIVER=
AUTH_DRIVER=

# Database Configuration
DATABASE_USERNAME=prabogo
DATABASE_PASSWORD=REPLACE_WITH_SECURE_PASSWORD
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_NAME=prabogo
# SECURITY: Enable SSL in production (require, verify-ca, or verify-full)
DATABASE_SSLMODE=disable
DATABASE_MIGRATION_DIR=./internal/migration

# Message Queue Configuration
MESSAGE_HOST=rabbitmq
MESSAGE_PORT=5672
MESSAGE_USER=prabogo
MESSAGE_PASSWORD=REPLACE_WITH_SECURE_PASSWORD
MESSAGE_VHOST=

# Cache Configuration
CACHE_HOST=redis
CACHE_PORT=6379
CACHE_PASSWORD=REPLACE_WITH_SECURE_PASSWORD

# Workflow Engine Configuration
WORKFLOW_HOST=temporal
WORKFLOW_PORT=7233
WORKFLOW_NAMESPACE=default

# Auth Configuration
AUTH_JWKS_URL=http://authentik.example.com/application/o/prabogo/jwks/

# Message Subscriptions
UPSERT_CLIENT_MESSAGE_SUBSCRIBE=client.upsert.subscribe