# =============================================
# EduVera Backend Environment Variables
# Copy this file to .env and fill in your values
# =============================================

# Server Configuration
SERVER_PORT=8000
PORT=8000

# Inbound Drivers
INBOUND_HTTP_DRIVER=fiber

# =============================================
# DATABASE CONFIGURATION
# =============================================
OUTBOUND_DATABASE_DRIVER=postgres

# Option 1: Individual (Local Development)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=postgres
DATABASE_NAME=eduvera
DATABASE_SSLMODE=disable

# Option 2: Connection String (Production - Recommended)
# DATABASE_URL=postgres://user:pass@host:port/dbname?sslmode=require

# =============================================
# EXTERNAL SERVICES
# =============================================
OUTBOUND_MESSAGE_DRIVER=whatsapp
OUTBOUND_CACHE_DRIVER=none
OUTBOUND_WORKFLOW_DRIVER=none

# =============================================
# WHATSAPP (Fonnte)
# Get your token at https://fonnte.com
# =============================================
FONNTE_TOKEN=your_fonnte_token_here

# =============================================
# TELEGRAM NOTIFICATION (Owner)
# Create bot at @BotFather, get chat_id from @userinfobot
# =============================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# =============================================
# PAYMENT GATEWAY (Midtrans)
# Get keys at https://dashboard.midtrans.com
# =============================================
MIDTRANS_CLIENT_KEY=your_midtrans_client_key
MIDTRANS_SERVER_KEY=your_midtrans_server_key
MIDTRANS_IS_PRODUCTION=false

# =============================================
# JWT AUTHENTICATION
# =============================================
JWT_SECRET=generate_a_secure_random_string_here

# =============================================
# OWNER DASHBOARD CREDENTIALS
# Change these in production!
# =============================================
OWNER_EMAIL=owner@yourdomain.com
OWNER_PASSWORD=change_this_password

# =============================================
# EVOLUTION API (Tenant WhatsApp Sender)
# For Premium tenants to connect their own WA
# =============================================
EVOLUTION_API_URL=http://localhost:8085
EVOLUTION_GLOBAL_KEY=your_evolution_api_key_here

# =============================================
# TELEGRAM ALERTS (Owner Notifications)
# Get from @BotFather on Telegram
# =============================================
TELEGRAM_BOT_TOKEN=your_bot_token_from_botfather
TELEGRAM_CHAT_ID=your_chat_id_or_group_id
