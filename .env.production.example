# =============================================
# EduVera Backend - PRODUCTION Environment
# Copy this to your production server as .env
# =============================================

# Server Configuration
SERVER_PORT=8000
PORT=8000

# Inbound Drivers
INBOUND_HTTP_DRIVER=fiber

# =============================================
# DATABASE (Production)
# Use DATABASE_URL for hosted databases (Railway, Supabase, etc)
# =============================================
OUTBOUND_DATABASE_DRIVER=postgres
DATABASE_URL=postgres://USER:PASSWORD@HOST:PORT/DATABASE?sslmode=require

# =============================================
# EXTERNAL SERVICES
# =============================================
OUTBOUND_MESSAGE_DRIVER=whatsapp
OUTBOUND_CACHE_DRIVER=none
OUTBOUND_WORKFLOW_DRIVER=none

# =============================================
# WHATSAPP (Fonnte) - PRODUCTION TOKEN
# =============================================
FONNTE_TOKEN=your_production_fonnte_token

# =============================================
# TELEGRAM NOTIFICATION (Owner)
# =============================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# =============================================
# PAYMENT GATEWAY (Midtrans) - PRODUCTION KEYS
# Switch to production keys when ready!
# =============================================
MIDTRANS_CLIENT_KEY=Mid-client-xxxx
MIDTRANS_SERVER_KEY=Mid-server-xxxx
MIDTRANS_IS_PRODUCTION=true

# =============================================
# JWT AUTHENTICATION - USE STRONG SECRET!
# Generate: openssl rand -hex 32
# =============================================
JWT_SECRET=generate_strong_random_secret_here

# =============================================
# OWNER DASHBOARD CREDENTIALS
# CHANGE THESE! Use strong password!
# =============================================
OWNER_EMAIL=your_real_email@domain.com
OWNER_PASSWORD=use_very_strong_password_here
