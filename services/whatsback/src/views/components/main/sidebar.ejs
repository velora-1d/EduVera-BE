<% var activeLink = 'bg-green-100 dark:bg-green-600 text-green-700' %>
<% var baseLink = 'text-gray-700 hover:bg-gray-100 dark:text-gray-50 dark:hover:bg-green-600' %>
<aside class="bg-white dark:bg-zinc-800 w-64 fixed inset-y-0 z-50 shadow-lg transform -translate-x-full lg:translate-x-0 transition-transform duration-300">
  <div class="p-4 bg-green-500 dark:bg-green-600 text-center">
    <h2 class="font-bold text-zinc-50">Whatsback Web <sup class="text-xs italic">v<%= APP_VERSION %></sup></h2>
  </div>
  <nav class="mt-4">
    <ul class="space-y-1 px-2">
      <!-- Sidebar menu items -->
      <li>
        <a href="/" class="flex items-center space-x-3 px-4 py-3 <%= pathname === 'dashboard' ? activeLink : baseLink %> dark:text-zinc-50 rounded-lg">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
          </svg>
          <span>Dashboard</span>
        </a>
      </li>
      <li>
        <a href="/commands" class="flex items-center space-x-3 px-4 py-3 <%= pathname === 'commands' ? activeLink : baseLink %> dark:text-zinc-50 rounded-lg">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
          <span>Commands</span>
        </a>
      </li>
      <!-- More menu items -->
      <li>
        <a href="/message/send" class="flex items-center space-x-3 px-4 py-3 <%= pathname === 'send-message' ? activeLink : baseLink %> dark:text-zinc-50 rounded-lg">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
          </svg>
          <span>Send Message</span>
        </a>
      </li>
      <li>
        <a href="/message/send-group" class="flex items-center space-x-3 px-4 py-3 <%= pathname === 'send-group-message' ? activeLink : baseLink %> dark:text-zinc-50 rounded-lg">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
          </svg>
          <span>Send Group Message</span>
        </a>
      </li>
      <li>
        <a href="/message/schedule" class="flex items-center space-x-3 px-4 py-3 <%= pathname === 'schedule-message' ? activeLink : baseLink %> dark:text-zinc-50 rounded-lg">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <span>Schedule Messages</span>
        </a>
      </li>
      <li>
        <a href="/contacts" class="flex items-center space-x-3 px-4 py-3 <%= pathname === 'contacts' ? activeLink : baseLink %> dark:text-zinc-50 rounded-lg">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
          </svg>
          <span>Contacts</span>
        </a>
      </li>
      <li>
        <span class="text-gray-500 dark:text-gray-400 px-4 py-3 font-bold text-sm">Guides</span>
      </li>
      <li>
        <a href="/user-manual" class="flex items-center space-x-3 px-4 py-3 <%= pathname === 'user-manual' ? activeLink : baseLink %> dark:text-zinc-50 rounded-lg">
          <i class="fas fa-book w-5 h-5"></i>
          <span>User Manual</span>
        </a>
      </li>
      <li>
        <a href="/integration" class="flex items-center space-x-3 px-4 py-3 <%= pathname === 'integration' ? activeLink : baseLink %> dark:text-zinc-50 rounded-lg">
          <i class="fas fa-cogs w-5 h-5"></i>
          <span>Integration</span>
        </a>
      </li>
    </ul>
  </nav>
  <div class="absolute bottom-0 w-full px-4 py-3">
    <div class="flex items-center justify-between text-center my-3 lg:hidden">
      <img id="user-profile-picture" class="w-10 h-10 rounded-full bg-white" src="https://robohash.org/WhatsbackUser" alt="User Profile Picture" />
      <p>
        <span id="user-profile-name" class="text-zinc-600 dark:text-zinc-50 text-sm">Whatsback User</span>
        <br />
        <span id="user-profile-phone" class="text-zinc-600 dark:text-zinc-50 text-xs">X XXX XXX</span>
      </p>
      <button class="btn-whatsback-logout px-2 py-1 hover:bg-red-600 hover:text-white text-gray-500 rounded">
        <i class="fas fa-sign-out-alt"></i>
      </button>
    </div>
    <button class="px-2 py-1 bg-pink-500 hover:bg-pink-600 text-white rounded w-full" id="open-modal">
      <i class="fa-solid fa-heart"></i> Donate
    </button>
  </div>
</aside>
